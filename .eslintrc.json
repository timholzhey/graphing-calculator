{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": ["error", {"allowIndentationTabs": true}],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }]
    }
}
